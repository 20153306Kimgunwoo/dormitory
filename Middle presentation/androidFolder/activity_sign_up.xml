<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="2"
                android:text="정보입력" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="ID : " />

                <EditText
                    android:id="@+id/stID"
                    android:layout_width="180dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/button_Duplicate_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="중복확인" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"/>

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="180dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="비밀번호 : " />

                <EditText
                    android:id="@+id/stPassword"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="비밀번호 확인 : " />

                <EditText
                    android:id="@+id/stPasswordCheck"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="학번 :" />

                <EditText
                    android:id="@+id/stNum"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stMajor"
                android:layout_width="300dp"
                android:layout_height="40dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="전공 :" />

                <Spinner
                    android:id="@+id/stMajorSpinner"
                    android:layout_width="180dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="이름 :" />

                <EditText
                    android:id="@+id/stName"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="주민번호 앞자리 :" />

                <EditText
                    android:id="@+id/stIDNum1"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="주민번호 뒷자리 :" />

                <EditText
                    android:id="@+id/stIDNum2"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:inputType="number"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="전화번호 :"/>

                <EditText
                    android:id="@+id/stPhoneNumber"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="right"/>

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="180dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_Check"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="확인"/>

            <Button
                android:id="@+id/button_Cancle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="취소" />
        </LinearLayout>


    </GridLayout>

</LinearLayout>